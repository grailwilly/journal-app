<h1>Category <%= @category.id %></h1>

<% @tasks.each do |task| %>
  <p><%= task.name %></p>
  <p><%= task.description %></p>
  <p><%= task.deadline %></p>
  <br/>
  <ul>
  <li><%= link_to "Edit", edit_category_task_path(@category, task) %></li>
  <li><%= link_to "Delete task", [task.category, task], data: {
      turbo_method: :delete,
      turbo_confirm: "Are you sure?"
    } %>
  </li>
  </ul>
<% end %>

<%= link_to 'Add Tasks', new_category_task_path %>