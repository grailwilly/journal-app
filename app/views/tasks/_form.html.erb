<%= form_with model: [@category, @task] do |f| %>
    <p>
     <% if @task.errors.any? %>
       <ul>
         <% @task.errors.full_messages.each do |message| %>
           <li><%= message %></li>
         <% end %>
       </ul>
     <% end %>
     </p>
   
     <p>
       <%= f.label :name%><br />
       <%= f.text_field :name, class: "input-task" %>
     </p>
  
     <p>
       <%= f.label :description%><br />
       <%= f.text_area :description, class: "input-task" %>
     </p>
  
     <p>
       <%= f.label :deadline%><br />
       <%= f.date_field :deadline, class: "input-task" %>
     </p>
    
     <p>
       <%= f.submit %>
     </p>
   <% end %>